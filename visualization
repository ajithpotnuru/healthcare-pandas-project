import pandas as pd
import matplotlib.pyplot as plt
import seaborn as sns
df = pd.read_csv(r"C:\Users\user\Downloads\archive\healthcare_dataset.csv")
plt.style.use("ggplot")
sns.set(font_scale=1.2)
#scatterplot
plt.figure(figsize=(8,5))
sns.scatterplot(data=df, x="Age", y="Billing Amount")
plt.title("Billing Amount vs Age")
plt.xlabel("Age")
plt.ylabel("Billing Amount")
plt.show()
#barplot
plt.figure(figsize=(8,5))
sns.barplot(x="Gender", y="Billing Amount", data=df)
plt.title("Average Billing Amount by Gender")
plt.xlabel("Gender")
plt.ylabel("Billing Amount")
plt.show()
#hisplot
plt.figure(figsize=(8,5))
sns.histplot(df["Billing Amount"], kde=True)
plt.title("Billing Amount Distribution")
plt.xlabel("Billing Amount")
plt.ylabel("Frequency")
plt.show()
#boxplot
plt.figure(figsize=(8,5))
sns.boxplot(x="Gender", y="Billing Amount", data=df)
plt.title("Billing Amount by Gender")
plt.show()
#lineplot
df["Date of Admission"] = pd.to_datetime(df["Date of Admission"])
monthly = df.groupby(df["Date of Admission"].dt.to_period("M")).size()
plt.figure(figsize=(10,5))
monthly.plot(kind="line")
plt.title("Monthly Patient Admissions")
plt.xlabel("Month")
plt.ylabel("Number of Patients")
plt.show() 
#heatmap
plt.figure(figsize=(8,5))
sns.heatmap(df[["Age", "Billing Amount"]].corr(), annot=True, cmap="coolwarm")
plt.title("Correlation Heatmap")
plt.show()
